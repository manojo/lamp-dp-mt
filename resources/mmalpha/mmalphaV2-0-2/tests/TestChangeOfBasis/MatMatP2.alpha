system mult: {N | 2<=N}    (a :  real; 
                b :  real)
       returns (c :  real);
let
  c[] = a * b;
tel;

system MatVect :{N,M | 2<=N; 2<=M}
               (A : {i,j | 1<=i<=N; 1<=j<=M} of real; 
                b : {i | 1<=i<=M} of real)
       returns (c : {i | 1<=i<=N} of real);
var
  bIN : {i,j | 1<=i<=N; 1<=j<=M; 2<=N; 2<=M} of real;
  C : {i,j | 1<=i<=N; 0<=j<=M} of real;
  mul : {i,j | 1<=i<=N; 1<=j<=M} of real;
let
  bIN[i,j] = b[j];
  use {i,j | 1<=i<=N; 1<=j<=M} mult[N] (A, bIN) returns  (mul) ;
  C[i,j] = 
      case
        { | j=0} : 0[];
        { | 1<=j} : C[i,j-1] + mul;
      esac;
  c[i] = C[i,M];
tel;
