system matmult :{M | 2<=M}
               (a : {i,j | 1<=i<=M; 1<=j<=M} of integer; 
                b : {i,j | 1<=i<=M; 1<=j<=M} of integer)
       returns (c : {i,j | 1<=i<=M; 1<=j<=M} of integer);
var
  pipeCb61 : {t,p1,p2 | p1+p2+1<=t<=p1+p2+M; 1<=p1<=M; 1<=p2<=M; 2<=M} of integer;
  pipeCa11 : {t,p1,p2 | p1+p2+1<=t<=p1+p2+M; 1<=p1<=M; 1<=p2<=M; 2<=M} of integer;
  C : {t,p1,p2 | p1+p2+1<=t<=p1+p2+M; 1<=p1<=M; 0<=p2<=M} of integer;
let
  pipeCb61[t,p1,p2] = 
      case
        { | t=p1+p2+1; 1<=p1<=M; 1<=p2<=M; 2<=M} : b[p2,p1];
        { | p1+p2+2<=t<=p1+p2+M; 1<=p1<=M; 1<=p2<=M} : pipeCb61[t-1,p1,p2];
      esac;
  pipeCa11[t,p1,p2] = 
      case
        { | p2+2<=t<=p2+M+1; p1=1; 1<=p2<=M; 2<=M} : a[t-p1-p2,p2];
        { | p1+p2+1<=t<=p1+p2+M; 2<=p1<=M; 1<=p2<=M} : pipeCa11[t-1,p1-1,p2];
      esac;
  c[i,j] = C[i+j+M,j,M];
  C[t,p1,p2] = 
      case
        { | p2=0} : 0[];
        { | 1<=p2<=M} : C[t-1,p1,p2-1] + pipeCa11 * pipeCb61;
      esac;
tel;
