system called (in: integer) returns (out: integer);
var
  x: {i|i=0} of integer;
let
  x = 1.(i->);
  -- This works
  out = 2.(->) + x[0] + in;
tel;
system caller : {N | N>=1}
 (v: {i| 0< i <= N} of integer) 
 returns (w: {i| 0< i <= N} of integer);
let
  use {i| 0<i<=N} called (v) returns (w);
tel;
